@model IEnumerable<OrderVm>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequiredDate)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.AdvancePaymentTax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOffer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfferlDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerOrdersVm.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdvancePaymentTax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOffer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfferlDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerOrdersVm.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paid)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
